<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorCard"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="7dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            style="@style/StyleCardTitle"
            android:text="Package name and detail" />

        <RelativeLayout
            android:id="@+id/rl_package_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_text_package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Name :"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_package_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_text_package_name"
                android:layout_toRightOf="@id/tv_text_package_name"
                android:background="@color/greyLight"
                android:backgroundTint="@color/greyLight"
                android:hint="@string/edt_hint_package_name"
                android:inputType="textMultiLine"
                android:maxLength="50"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@drawable/cursor_size"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_package_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_text_package_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Detail :"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_package_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_text_package_detail"
                android:layout_toRightOf="@id/tv_text_package_detail"
                android:background="@color/greyLight"
                android:backgroundTint="@color/greyLight"
                android:hint="@string/edt_hint_package_detail"
                android:inputType="textMultiLine"
                android:maxLength="150"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@drawable/cursor_size"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>